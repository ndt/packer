{
  "builders": [
    {
      "type": "virtualbox-iso",
	  "name": "CentOS7",

      "guest_os_type": "RedHat_64",
      "disk_size": 40520,
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ],

      "iso_checksum": "bba314624956961a2ea31dd460cd860a77911c1e0a56e4820a12b9c5dad363f5",
      "iso_checksum_type": "sha256",
      "iso_url": "http://ftp.rrzn.uni-hannover.de/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1708.iso",
	  "iso_interface": "sata",

      "guest_additions_url": "http://download.virtualbox.org/virtualbox/5.2.4/VBoxGuestAdditions_5.2.4.iso",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",

      "http_directory": "http",
      "boot_wait": "6s",
      "boot_command": [
        "<tab> cmdline ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks2.cfg<enter><wait>"
      ],

      "ssh_username": "root",
      "ssh_password": "packer",
      "ssh_port": 22,
      "ssh_wait_timeout": "600s",

      "virtualbox_version_file": ".vbox_version",
	  "keep_registered": "true"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
         "scripts/base.sh",
		 "scripts/virtualbox.sh",
         "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
	{
		"type": "compress",
		"output": "{{.BuildName}}.tar.lz4"
	},
	{
		"type": "checksum"
	}
  ]
}
