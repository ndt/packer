{
  "builders": [
    {
      "name": "centos-7-1708",
      "type": "virtualbox-iso",
      "vm_name": "CentOS-7-1708",

      "guest_os_type": "RedHat_64",
      "disk_size": 40520,
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ],

      "iso_checksum": "bba314624956961a2ea31dd460cd860a77911c1e0a56e4820a12b9c5dad363f5",
      "iso_checksum_type": "sha256",
      "iso_url": "http://ftp.rrzn.uni-hannover.de/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1708.iso",

      "guest_additions_url": "http://download.virtualbox.org/virtualbox/5.2.4/VBoxGuestAdditions_5.2.4.iso",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",

      "http_directory": "http",
      "boot_wait": "10s",
      "boot_command": [
        "<tab> cmdline ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks2.cfg<enter><wait>"
      ],

      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",

      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",

      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "override": {
        "centos-7-1708": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/virtualbox.sh",
            "scripts/cleanup.sh"
          ]
        }
      }
    }
  ]
}
